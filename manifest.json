{
  "manifest_version": 3,
  "author": "Asif Hossain",
  "name": "ChatGPT Sidebar - My Messages",
  "version": "1.1",
  "description": "Show all my Messages in the popup",

  "permissions":
  [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [ "https://chatgpt.com/*" ],

  "action":
  {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "background":
  {
    "service_worker": "background.js"
  },
  "content_scripts":
  [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": [
        "content.js",
        "features/pinned/shared.js",
        "features/pinned/styles.js",
        "features/pinned/storage.js",
        "features/pinned/modal.js",
        "features/pinned/history.js",
        "features/pinned/sidebar.js",
        "features/pinned/init.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "features/pinned/modal.html",
        "features/pinned/styles.css"
      ],
      "matches": ["https://chatgpt.com/*"]
    }
  ],

  "icons":
  {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
